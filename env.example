# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth Configuration
# Get these from https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Groups Authorization Control
# Set to 'true' to enable Google Groups API validation, 'false' or unset for simple domain check
ENABLE_GOOGLE_GROUPS_CHECK=false

# Google Admin SDK Configuration for Group Membership Validation
# Only needed if ENABLE_GOOGLE_GROUPS_CHECK=true
# Create a service account in Google Cloud Console with Admin SDK API access
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
# Admin user email that has permission to read group memberships
GOOGLE_ADMIN_EMAIL=admin@fodoole.com
